<UserControl x:Class="AttendanceMonitoringSystem.View.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AttendanceMonitoringSystem.View"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="1024" 
             d:DesignWidth="1440"
             Background="#F4F4F4">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <StackPanel.Background>
                <ImageBrush ImageSource="/AttendanceMonitoringSystem;component/Images/BG.png"/>
            </StackPanel.Background>

            <StackPanel Orientation="Horizontal">
                <Image Source="/AttendanceMonitoringSystem;component/Images/School Logo.png" 
                   Width="70" 
                   Height="100"/>

                <Grid Width="230">
                    <StackPanel VerticalAlignment="Center"
                                Margin="0,10,0,0">
                        <TextBlock Text="VICENTE HIZON SR." 
                       Foreground="White" 
                       FontSize="15" 
                       FontWeight="Bold" 
                       FontFamily="Arial Black"
                       HorizontalAlignment="Left" 
                       Margin="0,0,0,0"/>

                        <TextBlock Text="ELEMENTARY SCHOOL" 
                       Foreground="White" 
                       FontSize="15" 
                       FontWeight="Bold" 
                       FontFamily="Arial Black"
                       HorizontalAlignment="Left" 
                       Margin="0,0,0,0"/>
                    </StackPanel>

                </Grid>

            </StackPanel>

            <RadioButton Cursor="Hand"
                         Margin="0,50,0,0"
                         Height="60">
                <RadioButton.Template>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Padding="10"
                                Background="Transparent">
                            <StackPanel Orientation="Horizontal" 
                                        VerticalAlignment="Center">
                                <fa:ImageAwesome Icon="Home" 
                                                 Width="30" 
                                                 Height="30" 
                                                 Foreground="White" 
                                                 Margin="20,0,30,0"/>
                                <TextBlock Text="Dashboard" 
                                           Foreground="White" 
                                           FontSize="20" 
                                           FontWeight="Normal" 
                                           FontFamily="Arial Black"
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#1A43BF"/>
                            </Trigger>


                            <Trigger Property="IsPressed" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#002D72"/>
                                <Setter TargetName="border" 
                                        Property="TextElement.Foreground" 
                                        Value="#002D72"/>
                            </Trigger>


                            <Trigger Property="IsChecked" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#002D72"/>
                                <Setter TargetName="border" 
                                        Property="TextElement.Foreground"
                                        Value="#002D72"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>

            <RadioButton Cursor="Hand"
                         Height="60">
                <RadioButton.Template>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Padding="10"
                                Background="Transparent">
                            <StackPanel Orientation="Horizontal" 
                                        VerticalAlignment="Center">
                                <fa:ImageAwesome Icon="GraduationCap" 
                                                 Width="30" 
                                                 Height="30" 
                                                 Foreground="White" 
                                                 Margin="20,0,30,0"/>
                                <TextBlock Text="Student Page" 
                                           Foreground="White" 
                                           FontSize="20" 
                                           FontWeight="Normal" 
                                           FontFamily="Arial Black"
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#1A43BF"/>
                            </Trigger>


                            <Trigger Property="IsPressed" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#002D72"/>
                                <Setter TargetName="border" 
                                        Property="TextElement.Foreground" 
                                        Value="#002D72"/>
                            </Trigger>


                            <Trigger Property="IsChecked" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#002D72"/>
                                <Setter TargetName="border" 
                                        Property="TextElement.Foreground"
                                        Value="#002D72"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>

            <RadioButton Cursor="Hand"
                         Height="60">
                <RadioButton.Template>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Padding="10"
                                Background="Transparent">
                            <StackPanel Orientation="Horizontal" 
                                        VerticalAlignment="Center">
                                <fa:ImageAwesome Icon="User" 
                                                 Width="30" 
                                                 Height="30" 
                                                 Foreground="White" 
                                                 Margin="20,0,30,0"/>
                                <TextBlock Text="Teacher Page" 
                                           Foreground="White" 
                                           FontSize="20" 
                                           FontWeight="Normal" 
                                           FontFamily="Arial Black"
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#1A43BF"/>
                            </Trigger>


                            <Trigger Property="IsPressed" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#002D72"/>
                                <Setter TargetName="border" 
                                        Property="TextElement.Foreground" 
                                        Value="#002D72"/>
                            </Trigger>


                            <Trigger Property="IsChecked" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#002D72"/>
                                <Setter TargetName="border" 
                                        Property="TextElement.Foreground"
                                        Value="#002D72"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>

            <RadioButton Cursor="Hand"
                         Margin="0,550,0,0"
                         Height="60">
                <RadioButton.Template>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Padding="10"
                                Background="Transparent">
                            <StackPanel Orientation="Horizontal" 
                                        VerticalAlignment="Center">
                                <fa:ImageAwesome Icon="SignOut" 
                                                 Width="30" 
                                                 Height="30" 
                                                 Foreground="White" 
                                                 Margin="20,0,30,0"/>
                                <TextBlock Text="Log Out" 
                                           Foreground="White" 
                                           FontSize="20" 
                                           FontWeight="Normal" 
                                           FontFamily="Arial Black"
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#1A43BF"/>
                            </Trigger>


                            <Trigger Property="IsPressed" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#002D72"/>
                                <Setter TargetName="border" 
                                        Property="TextElement.Foreground" 
                                        Value="#002D72"/>
                            </Trigger>


                            <Trigger Property="IsChecked" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#002D72"/>
                                <Setter TargetName="border" 
                                        Property="TextElement.Foreground"
                                        Value="#002D72"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
        </StackPanel>
    </Grid>
</UserControl>