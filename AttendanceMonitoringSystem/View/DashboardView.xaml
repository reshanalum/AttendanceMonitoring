<UserControl x:Class="AttendanceMonitoringSystem.View.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AttendanceMonitoringSystem.View"
             xmlns:ViewModel="clr-namespace:AttendanceMonitoringSystem.ViewModel"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:c="clr-namespace:AttendanceMonitoringSystem.Command"
             mc:Ignorable="d" 
             d:DesignHeight="1024" 
             d:DesignWidth="1440"
             Background="#F4F4F4">

    <UserControl.Resources>
        <c:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="White"
                    Height="80"
                    VerticalAlignment="Top">



                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                VerticalAlignment="Center"
                                Width="150"
                                HorizontalAlignment="Left">
                        <TextBlock Text="Admin" 
                                   Foreground="#002D96" 
                                   FontSize="25" 
                                   FontWeight="Normal" 
                                   FontFamily="Arial Black"
                                   Margin="20,0,0,0"/>
                        <TextBlock Text="Faculty"
                                   Foreground="#002D96"
                                   FontSize="20"
                                   FontWeight="Light"
                                   FontFamily="Segoe UI"
                                   Margin="20,0,0,0"/>
                    </StackPanel>

                    <fa:ImageAwesome Grid.Column="1"
                                     Icon="UserCircle" 
                                     Width="60" 
                                     Height="50" 
                                     Foreground="#002D96"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Right"
                                     Margin="0,0,20,0"/>
                </Grid>
            </Border>

         
            <Rectangle Grid.Row="0"
                       Height="5"
                       VerticalAlignment="Bottom"
                       Fill="Transparent">
                <Rectangle.Effect>
                    <DropShadowEffect BlurRadius="5"
                              ShadowDepth="0"
                              Opacity="0.3"
                              Color="Black"/>
                </Rectangle.Effect>
            </Rectangle>

            <TextBlock Grid.Row="1"
                Text="BLAHHHHHHHHHHHHHHHH"
                                   Foreground="#002D96"
                                   FontSize="20"
                                   FontWeight="Light"
                                   FontFamily="Arial Black"
                                   Margin="20,40,0,0"/>

            <!-- Content -->
            <ContentControl Grid.Row="1"
                                            Margin="2"
                                            Background="Transparent"
                                            Content="{Binding CurrentView}"/>
        </Grid>

        <StackPanel Grid.Column="0">
            <StackPanel.Background>
                <ImageBrush ImageSource="/Images/Navigationpanel.png"/>
            </StackPanel.Background>

            <StackPanel Orientation="Horizontal">
                <Image Source="/AttendanceMonitoringSystem;component/Images/School Logo.png" 
                   Width="70" 
                   Height="100"/>

                <Grid Width="230">
                    <StackPanel VerticalAlignment="Center"
                                Margin="0,10,0,0">
                        <TextBlock Text="VICENTE HIZON SR." 
                       Foreground="White" 
                       FontSize="15" 
                       FontWeight="Bold" 
                       FontFamily="Arial Black"
                       HorizontalAlignment="Left" 
                       Margin="0,0,0,0"/>

                        <TextBlock Text="ELEMENTARY SCHOOL" 
                       Foreground="White" 
                       FontSize="15" 
                       FontWeight="Bold" 
                       FontFamily="Arial Black"
                       HorizontalAlignment="Left" 
                       Margin="0,0,0,0"/>
                    </StackPanel>

                </Grid>

            </StackPanel>

            <RadioButton Cursor="Hand"
                         Margin="0,50,0,0"
                         Height="60"
                      Click="ShowDashboard">
                <RadioButton.Template>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Padding="10"
                                Background="Transparent">
                            <StackPanel Orientation="Horizontal" 
                                        VerticalAlignment="Center">
                                <fa:ImageAwesome Icon="Home" 
                                                 Width="30" 
                                                 Height="30" 
                                                 Foreground="White" 
                                                 Margin="20,0,30,0"/>
                                <TextBlock Text="Dashboard" 
                                           Foreground="White" 
                                           FontSize="20" 
                                           FontWeight="Normal" 
                                           FontFamily="Arial Black"
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#1A43BF"/>
                            </Trigger>


                            <Trigger Property="IsPressed" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#002D72"/>
                                <Setter TargetName="border" 
                                        Property="TextElement.Foreground" 
                                        Value="#002D72"/>
                            </Trigger>


                            <Trigger Property="IsChecked" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#002D72"/>
                                <Setter TargetName="border" 
                                        Property="TextElement.Foreground"
                                        Value="#002D72"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>

            <RadioButton Cursor="Hand"
                         Height="60"
                         Click ="ShowSectionList">
                <RadioButton.Template>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Padding="10"
                                Background="Transparent">
                            <StackPanel Orientation="Horizontal" 
                                        VerticalAlignment="Center">
                                <fa:ImageAwesome Icon="GraduationCap" 
                                                 Width="30" 
                                                 Height="30" 
                                                 Foreground="White" 
                                                 Margin="20,0,30,0"/>
                                <TextBlock Text="Student Page" 
                                           Foreground="White" 
                                           FontSize="20" 
                                           FontWeight="Normal" 
                                           FontFamily="Arial Black"
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#1A43BF"/>
                            </Trigger>


                            <Trigger Property="IsPressed" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#002D72"/>
                                <Setter TargetName="border" 
                                        Property="TextElement.Foreground" 
                                        Value="#002D72"/>
                            </Trigger>


                            <Trigger Property="IsChecked" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#002D72"/>
                                <Setter TargetName="border" 
                                        Property="TextElement.Foreground"
                                        Value="#002D72"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>

            <RadioButton Cursor="Hand"
                         Height="60"
                         Click ="ShowTeacherList" >
                <RadioButton.Template>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Padding="10"
                                Background="Transparent">
                            <StackPanel Orientation="Horizontal" 
                                        VerticalAlignment="Center">
                                <fa:ImageAwesome Icon="User" 
                                                 Width="30" 
                                                 Height="30" 
                                                 Foreground="White" 
                                                 Margin="20,0,30,0"/>
                                <TextBlock Text="Teacher Page" 
                                           Foreground="White" 
                                           FontSize="20" 
                                           FontWeight="Normal" 
                                           FontFamily="Arial Black"
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#1A43BF"/>
                            </Trigger>


                            <Trigger Property="IsPressed" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#002D72"/>
                                <Setter TargetName="border" 
                                        Property="TextElement.Foreground" 
                                        Value="#002D72"/>
                            </Trigger>


                            <Trigger Property="IsChecked" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#002D72"/>
                                <Setter TargetName="border" 
                                        Property="TextElement.Foreground"
                                        Value="#002D72"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>

            <RadioButton Cursor="Hand"
                         Margin="0,550,0,0"
                         Height="60"
                         Click ="ShowLogout" >
                <RadioButton.Template>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Padding="10"
                                Background="Transparent">
                            <StackPanel Orientation="Horizontal" 
                                        VerticalAlignment="Center">
                                <fa:ImageAwesome Icon="SignOut" 
                                                 Width="30" 
                                                 Height="30" 
                                                 Foreground="White" 
                                                 Margin="20,0,30,0"/>
                                <TextBlock Text="Log Out" 
                                           Foreground="White" 
                                           FontSize="20" 
                                           FontWeight="Normal" 
                                           FontFamily="Arial Black"
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#1A43BF"/>
                            </Trigger>


                            <Trigger Property="IsPressed" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#002D72"/>
                                <Setter TargetName="border" 
                                        Property="TextElement.Foreground" 
                                        Value="#002D72"/>
                            </Trigger>


                            <Trigger Property="IsChecked" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#002D72"/>
                                <Setter TargetName="border" 
                                        Property="TextElement.Foreground"
                                        Value="#002D72"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
        </StackPanel>
    </Grid>
</UserControl>