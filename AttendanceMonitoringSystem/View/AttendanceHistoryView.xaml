<UserControl x:Class="AttendanceMonitoringSystem.View.AttendanceHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AttendanceMonitoringSystem.View"
             xmlns:ViewModel="clr-namespace:AttendanceMonitoringSystem.ViewModel" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:c="clr-namespace:AttendanceMonitoringSystem.Command"
             mc:Ignorable="d" 
             d:DesignHeight="944" d:DesignWidth="1105"
             Background="#F4F4F4">

    <UserControl.Resources>

        <c:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style x:Key="PageButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E9ECEF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DEE2E6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#AAA"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ActivePageButtonStyle" BasedOn="{StaticResource PageButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#002D96"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#002D96"/>
        </Style>
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="root">
                            <!-- Background -->
                            <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            SnapsToDevicePixels="True"/>
                            <!-- Icon/Content -->
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#402D96FF"/>
                                <!-- Semi-transparent overlay matching icon color -->
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#602D96FF"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                <Setter Property="Foreground" Value="#AAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="590"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0"
                Background="White"
                Padding="10,0" Margin="0,30,15,30"
                SnapsToDevicePixels="True">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                      BlurRadius="10"
                      ShadowDepth="2"
                      Opacity="0.15"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" 
             VerticalAlignment="Center">

                <fa:ImageAwesome Icon="Search"
                      Foreground="#002D96"
                      Width="21" Height="30"
                      Margin="10,0,5,0"/>

                <TextBox x:Name="SearchBox"
              BorderThickness="0"
              Background="Transparent"
              VerticalContentAlignment="Center"
              FontSize="18"
              Foreground="Black"/>

                <TextBlock Text="Search..."
                FontSize="18"
                Foreground="Gray"
                VerticalAlignment="Center"
                Margin="5,0,0,0"
                IsHitTestVisible="False"
                Visibility="{Binding Text.IsEmpty,
                            ElementName=SearchBox,
                            Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </Border>
        <TextBlock Grid.Column="1"
                   Text="Attendance History"
                   FontSize="35"
                   FontWeight="Bold"
                   Foreground="#002D96"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0,0,0,0"/>

        <Border Grid.ColumnSpan="1"
                    CornerRadius="2"
                    Background="White"
                    Grid.Row="1"
                    SnapsToDevicePixels="True" Margin="0,0,15,130">

            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  BlurRadius="10"
                                  ShadowDepth="2"
                                  Opacity="0.15"/>
            </Border.Effect>
            <ListView   Padding="8,5"
                        Grid.Row="2"
                        ItemsSource="{Binding StudentList}"
                        SelectedItem="{Binding SelectedStudent}"
                        SelectedIndex="{Binding SelectedIndex}">

                <ListView.Resources>

                    <Style TargetType="GridViewColumnHeader">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="#002D96"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Padding" Value="10,0"/>
                        <Setter Property="BorderBrush" Value="#E5E7EB"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GridViewColumnHeader">
                                    <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                        <TextBlock Text="{TemplateBinding Content}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontWeight="{TemplateBinding FontWeight}"
                                       FontSize="{TemplateBinding FontSize}"
                                       Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.Resources>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="LRN" 
                                        Width="130">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding SectionName}"
                                               FontFamily="Montserrat"
                                                FontWeight="Regular"
                                                Foreground="#002D96"
                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="First Name" 
                                        Width="158">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Firstname}"
                                               FontFamily="Montserrat"
                                                FontWeight="Regular"
                                                Foreground="#002D96"
                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Last Name" 
                                        Width="158">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Lastname}"
                                                FontFamily="Montserrat"
                                                FontWeight="Regular"
                                                Foreground="#002D96"
                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,700,15,0"
                    Background="Transparent">

            <Button Content="Prev"
            Style="{StaticResource PageButtonStyle}"
            IsEnabled="True"
            Width="50"
            Height="50"
            FontSize="18"/>

            <Button Content="1" 
            Style="{StaticResource ActivePageButtonStyle}"
            Width="50"
            Height="50"
            FontSize="18"/>

            <Button Content="2"
            Style="{StaticResource PageButtonStyle}"
            Width="50"
            Height="50"
            FontSize="18"/>

            <Button Content="3" 
            Style="{StaticResource PageButtonStyle}"
            Width="50"
            Height="50"
            FontSize="18"/>

            <TextBlock Text="..."
               VerticalAlignment="Center"
               Margin="8,0"
               FontSize="18"
               FontWeight="SemiBold"
               Foreground="#6c757d"/>

            <Button Content="10" 
            Style="{StaticResource PageButtonStyle}"
            Width="50"
            Height="50"
            FontSize="18"/>


            <Button Content="Next"
            Style="{StaticResource PageButtonStyle}"
            Width="50"
            Height="50"
            FontSize="18"/>
        </StackPanel>

        <Border Grid.Column="1"
            CornerRadius="2"
            Background="White"
            Grid.Row="1"
            SnapsToDevicePixels="True" Margin="20,0,0,0">

            <Border.Effect>
                <DropShadowEffect Color="Black"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Opacity="0.15"/>
            </Border.Effect>
            <ListView   Padding="8,5"
                        Grid.Row="2"
                        ItemsSource="{Binding AttendanceList}"
                        SelectedItem="{Binding SelectedStudent}"
                        SelectedIndex="{Binding SelectedIndex}">

                <ListView.Resources>

                    <Style TargetType="GridViewColumnHeader">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="#002D96"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Padding" Value="10,0"/>
                        <Setter Property="BorderBrush" Value="#E5E7EB"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GridViewColumnHeader">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <TextBlock Text="{TemplateBinding Content}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{TemplateBinding Foreground}"
                                                   FontWeight="{TemplateBinding FontWeight}"
                                                   FontSize="{TemplateBinding FontSize}"
                                                   Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.Resources>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" 
                            Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding StudentId}"
                                               FontFamily="Montserrat"
                                                FontWeight="Regular"
                                                Foreground="#002D96"
                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Status" 
                            Width="158">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Status}"
                                               FontFamily="Montserrat"
                                                FontWeight="Regular"
                                                Foreground="#002D96"
                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="DateTime" 
                            Width="158">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DateTime}"
                                    FontFamily="Montserrat"
                                    FontWeight="Regular"
                                    Foreground="#002D96"
                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
    </Grid>
</UserControl>
