                        HorizontalAlignment="Center"
                        SnapsToDevicePixels="True"
                        Cursor="Hand">

                    <Button Background="Transparent"
                            BorderThickness="0"
                            Height="40"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="White"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Cursor="Hand"
                            Click="SaveButton_Click">

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">

                            <fa:ImageAwesome Icon="Times"
                             Foreground="White"
                             Width="16"
                             Height="16"
                             Margin="0,0,6,0"/>


                            <TextBlock Text="Cancel"
                                       VerticalAlignment="Center"
                                       Foreground="White"/>
                        </StackPanel>

                    </Button>
                </Border>

                <Border Height="40"
                        Width="120"
                        Margin="0,10,20,0"
                        Background="#002D96"    
                        CornerRadius="8"
                        HorizontalAlignment="Center"
                        SnapsToDevicePixels="True"
                        Cursor="Hand">

                    <Button Background="Transparent"
                            BorderThickness="0"
                            Height="40"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="White"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Cursor="Hand"
                            Click="SaveButton_Click">

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">

                            <fa:ImageAwesome Icon="Save"
                             Foreground="White"
                             Width="16"
                             Height="16"
                             Margin="0,0,6,0"/>


