<Window x:Class="AttendanceMonitoringSystem.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendanceMonitoringSystem.View"
        xmlns:c="clr-namespace:AttendanceMonitoringSystem.Command"
        mc:Ignorable="d"
        Title="LoginView" Height="1024" Width="1440"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        BorderBrush="Transparent">
    
    <Window.Resources>

        <c:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>


        <DropShadowEffect x:Key="DropShadow"
                      Color="#000000"
                      Opacity="0.30"
                      BlurRadius="8"
                      ShadowDepth="2"/>
   
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="833"/>
            <ColumnDefinition Width="607"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <StackPanel.Background>
                <ImageBrush ImageSource="/AttendanceMonitoringSystem;component/Images/BG.png"/>
            </StackPanel.Background>

            <TextBlock Text="VICENTE HIZON SR." 
                       Foreground="White" 
                       FontSize="57" 
                       FontWeight="Bold" 
                       FontFamily="Arial Black"
                       HorizontalAlignment="Left" 
                       Margin="92,319,0,0"/>
            <TextBlock Text="ELEMENTARY SCHOOL" 
                       Foreground="White" 
                       FontSize="50" 
                       FontWeight="Bold" 
                       FontFamily="Arial Black"
                       HorizontalAlignment="Left" 
                       Margin="92,0,0,0"/>
            <TextBlock Text="ATTENDANCE MONITORING SYSTEM" 
                       Foreground="White" 
                       FontSize="30" 
                       FontFamily="Arial"
                       HorizontalAlignment="Left" 
                       Margin="92,10,0,0"/>
            <TextBlock Text="This is an attendance monitoring system created and designed by 3rd-year computer engineering students from Ateneo de Davao University as part of their compliance for their Student-Learning Program course under the Computer Engineering Elective 1 subject."
                       TextWrapping="Wrap"
                         Foreground="White" 
                         FontSize="18" 
                         FontFamily="Arial"
                         HorizontalAlignment="Left" 
                         Margin="92,50,0,0"
                         Height="88"
                         Width="663"/>
            <TextBlock Text="@2025 AdDU CpE 3A. All rights reserved." 
                       Foreground="White" 
                       FontSize="18" 
                       FontFamily="Arial"
                       HorizontalAlignment="Left" 
                       Margin="92,300,0,0"
                       Opacity="0.5"/>
        </StackPanel>

        <StackPanel Grid.Column="1"
                    Background="White">
            <Image Source="/AttendanceMonitoringSystem;component/Images/School Logo.png" 
                   Width="228" 
                   Height="225" 
                   HorizontalAlignment="Center"
                   Margin="0,140,0,0"/>

            <Border CornerRadius="10"
                    Background="White"
                    Width="426"
                    Height="52"
                    Margin="0,40,0,0"
                    Effect="{StaticResource DropShadow}">
                <Grid>
                    <TextBox x:Name="Username"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13"
                             FontWeight="Regular"
                             FontFamily="Montserrat"
                             BorderThickness="0"
                             Height="52"
                             VerticalContentAlignment="Center"
                             Padding="20,0,0,0"
                             Background="Transparent"
                             Width="426"
                             TextChanged="Username_TextChanged"
                             Tag="Username"/>
                    <TextBlock Text="Username"
                               Foreground="#FFC3C3C3"
                               FontFamily="Arial"
                               FontSize="20"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=Username, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>
            </Border>
            <Border CornerRadius="10"
                     Background="White"
                     Width="426"
                     Height="52"
                     Margin="0,30,0,0"
                     Effect="{StaticResource DropShadow}">
                <Grid>
                    <TextBox x:Name="Password"
                              Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                              FontSize="13"
                              FontWeight="Regular"
                              FontFamily="Montserrat"
                              BorderThickness="0"
                              Height="52"
                              VerticalContentAlignment="Center"
                              Padding="20,0,0,0"
                              Background="Transparent"
                              Width="426"
                              TextChanged="Password_TextChanged"
                              Tag="Password"/>
                    <TextBlock Text="Password"
                                Foreground="#FFC3C3C3"
                                FontFamily="Arial"
                                FontSize="20"
                                VerticalAlignment="Center"
                                Margin="20,0,0,0"
                                IsHitTestVisible="False"
                                Visibility="{Binding Text.IsEmpty, ElementName=Password, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>
            </Border>
            
            <Button x:Name="btnLOGIN"
                    BorderThickness="0"
                    Content="LOG IN"
                    Foreground="White"
                    FontFamily="Arial Black"
                    FontSize="15"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Command="{Binding ShowAddLegCommand}"
                    Margin="0,30,0,0"
                    Height="65"
                    Click="btnADD_Click" Width="399">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#1320A1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0011C3"/>
                                <Setter Property="Foreground" Value="#1320A1"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Height="40" CornerRadius="5"
                                
                                Background="{TemplateBinding Background}" Margin="-12,12,-13,13">
                            <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Effect>
                    <DropShadowEffect Color="#FF2B2B2B"
                          Opacity="0.523"
                          Direction="279.4"
                          BlurRadius="3"
                          ShadowDepth="1"/>
                </Button.Effect>
            </Button>
        </StackPanel>

    </Grid>
</Window>
