<UserControl x:Class="AttendanceMonitoringSystem.View.StudentInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AttendanceMonitoringSystem.View"
             mc:Ignorable="d" 
             xmlns:ViewModel="clr-namespace:AttendanceMonitoringSystem.ViewModel" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:c="clr-namespace:AttendanceMonitoringSystem.Command"
             d:DesignHeight="949" 
             d:DesignWidth="1105"
             Background="#F4F4F4">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="10"/>
            <RowDefinition/>

        </Grid.RowDefinitions>


        <Border Grid.Row="2"
                CornerRadius="2"
                Background="White"
                SnapsToDevicePixels="True">

            <Border.Effect>
                <DropShadowEffect Color="Black"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Opacity="0.15"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="350"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <Grid Grid.Row="1">

                    <StackPanel>

                        <TextBlock Text="Attendance History" 
                               FontSize="23" 
                               FontWeight="Bold" 
                               Foreground="#002D96"
                               Margin="10,0,0,0"/>

                        <ListView Padding="8,5"
          Margin="20"
          Width="500"
          Height="400"
          HorizontalAlignment="Center"
          ItemsSource="{Binding AttendanceList}"
          SelectedItem="{Binding SelectedAttendance, Mode=TwoWay}"
          SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}">

                            <ListView.Resources>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="#002D96"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="Height" Value="40"/>
                                    <Setter Property="Padding" Value="10,0"/>
                                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="GridViewColumnHeader">
                                                <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                                    <TextBlock Text="{TemplateBinding Content}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontWeight="{TemplateBinding FontWeight}"
                                       FontSize="{TemplateBinding FontSize}"
                                       Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.Resources>

                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Status" Width="200">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Status}"
                                   FontFamily="Montserrat"
                                   FontWeight="Regular"
                                   Foreground="#002D96"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="DateTime" Width="300">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DateTime, StringFormat=MM/dd/yyyy HH:mm}"
                                   FontFamily="Montserrat"
                                   FontWeight="Regular"
                                   Foreground="#002D96"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>


                </Grid>

                <Grid Grid.Row="0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Student Information" 
                               FontSize="23" 
                               FontWeight="Bold" 
                               Foreground="#002D96"
                               Margin="10,0,0,0"/>



                    <StackPanel Grid.Row="1"
                                Grid.Column="0"
                                Orientation="Vertical"
                                Margin="20,0,20,0"
                                VerticalAlignment="Center">

                        <TextBlock Text="Student ID" 
                               FontSize="23" 
                               FontWeight="Bold" 
                               Foreground="#002D96"/>


                        <Border Background="#E0E0E0"
                                BorderThickness="2"
                                CornerRadius="6"
                                Padding="10,5"
                                SnapsToDevicePixels="True"
                                Height="50"
                                Width="400">

                            <Border.Effect>
                                <DropShadowEffect Color="#000000"
                                     Opacity="0.35"   
                                    BlurRadius="15"
                                    ShadowDepth="3"/>
                            </Border.Effect>

                            <TextBox x:Name="StudentIdTextBox"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="18"
                                     Foreground="#333"
                                     VerticalContentAlignment="Center"
                                     Padding="10,5"
                                     Text="{Binding SelectedStudent.StudentId, UpdateSourceTrigger=PropertyChanged}"
                                     IsReadOnly="True"/>
                        </Border>

                    </StackPanel>

                    <StackPanel Grid.Row="1"
                                Grid.Column="1"
                                Orientation="Vertical"
                                Margin="20,0,20,0"
                                VerticalAlignment="Center">

                        <TextBlock Text="LRN" 
                               FontSize="23" 
                               FontWeight="Bold" 
                               Foreground="#002D96"/>

                        <Border Background="#E0E0E0"
                                BorderThickness="2"
                                CornerRadius="6"
                                Padding="10,5"
                                SnapsToDevicePixels="True"
                                Height="50"
                                Width="400">

                            <Border.Effect>
                                <DropShadowEffect Color="#000000"
                                     Opacity="0.35"   
                                    BlurRadius="15"
                                    ShadowDepth="3"/>
                            </Border.Effect>

                            <TextBox x:Name="LRNTextBox"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="18"
                                     Foreground="#333"
                                     VerticalContentAlignment="Center"
                                     Padding="10,5"
                                     Text="{Binding SelectedStudent.LRN, UpdateSourceTrigger=PropertyChanged}"
                                     IsReadOnly="True"/>
                        </Border>

                    </StackPanel>


                    <StackPanel Grid.Row="2"
                                Grid.Column="0"
                                Orientation="Vertical"
                                Margin="20,0,20,0"
                                VerticalAlignment="Center">

                        <TextBlock Text="First Name" 
                               FontSize="23" 
                               FontWeight="Bold" 
                               Foreground="#002D96"/>

                        <Border Background="White"
                                BorderThickness="2"
                                CornerRadius="6"
                                Padding="10,5"
                                SnapsToDevicePixels="True"
                                Height="50"
                                Width="400">

                            <Border.Effect>
                                <DropShadowEffect Color="#000000"
                                     Opacity="0.35"   
                                    BlurRadius="15"
                                    ShadowDepth="3"/>
                            </Border.Effect>

                            <TextBox x:Name="FirstNameTextBox"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="18"
                                     Foreground="#333"
                                     VerticalContentAlignment="Center"
                                     Padding="10,5"
                                      IsReadOnly="True"
                                      Text="{Binding SelectedStudent.FirstName, UpdateSourceTrigger=PropertyChanged}"
                                     />
                        </Border>

                    </StackPanel>

                    <StackPanel Grid.Row="2"
                                Grid.Column="1"
                                Orientation="Vertical"
                                Margin="20,10,20,10"
                                VerticalAlignment="Center">

                        <TextBlock Text="Last Name" 
                               FontSize="23" 
                               FontWeight="Bold" 
                               Foreground="#002D96"/>

                        <Border Background="White"
                                BorderThickness="2"
                                CornerRadius="6"
                                Padding="10,5"
                                SnapsToDevicePixels="True"
                                Height="50"
                                Width="400">

                            <Border.Effect>
                                <DropShadowEffect Color="#000000"
                                     Opacity="0.35"   
                                    BlurRadius="15"
                                    ShadowDepth="3"/>
                            </Border.Effect>

                            <TextBox x:Name="LastNameTextBox"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="18"
                                     Foreground="#333"
                                     VerticalContentAlignment="Center"
                                     Padding="10,5"
                                      IsReadOnly="True"
                                      Text="{Binding SelectedStudent.LastName, UpdateSourceTrigger=PropertyChanged}"/>
                        </Border>

                    </StackPanel>



                    <StackPanel Grid.Row="3"
                                Grid.Column="0"
                                Orientation="Vertical"
                                Margin="20,10,20,10"
                                VerticalAlignment="Center">

                        <TextBlock Text="Enrollment Status" 
                               FontSize="23" 
                               FontWeight="Bold" 
                               Foreground="#002D96"/>

                        <Border Background="White"
                                BorderThickness="2"
                                CornerRadius="6"

                                SnapsToDevicePixels="True"
                                Height="50"
                                Width="400">

                            <Border.Effect>
                                <DropShadowEffect Color="#000000"
                                     Opacity="0.35"   
                                    BlurRadius="15"
                                    ShadowDepth="3"/>
                            </Border.Effect>

                            <TextBox x:Name="EnrollmentStatus"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="18"
                                     Foreground="#333"
                                     VerticalContentAlignment="Center"
                                     Padding="10,5"
                                     IsReadOnly="True"
                                     Text="{Binding SelectedStudent.EnrollmentStatus, UpdateSourceTrigger=PropertyChanged}"/>

                        </Border>

                    </StackPanel>

                </Grid>


            </Grid>


        </Border>


        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Vertical"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="6">

                    <Button Width="40"
                            Height="40"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Command="{Binding BackCommand}">
                        <fa:ImageAwesome Icon="ArrowLeft"
                                         Height="25"
                                         Width="32"
                                         Foreground="#FF002D96"/>
                    </Button>

                </StackPanel>

            </Grid>

        </Grid>


    </Grid>
</UserControl>
