<UserControl x:Class="AttendanceMonitoringSystem.View.AdminSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AttendanceMonitoringSystem.View"
            xmlns:ViewModel="clr-namespace:AttendanceMonitoringSystem.ViewModel" 
            xmlns:fa="http://schemas.fontawesome.io/icons/"
            xmlns:c="clr-namespace:AttendanceMonitoringSystem.Command"
            mc:Ignorable="d" 
            d:DesignHeight="944" 
            d:DesignWidth="1105"
            Background="#F4F4F4">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>


    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="10"/>
            <RowDefinition/>

        </Grid.RowDefinitions>


        <Border Grid.Row="2"
               CornerRadius="2"
               Background="White"
               SnapsToDevicePixels="True">

            <Border.Effect>
                <DropShadowEffect Color="Black"
                         BlurRadius="10"
                         ShadowDepth="2"
                         Opacity="0.15"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="350"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <!-- Content -->
                <ContentControl Grid.Row="1"
                                            Margin="2"
                                            Background="Transparent"
                                            Content="{Binding NewView}" />

                <Grid Grid.Row="0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Admin Information" 
                              FontSize="23" 
                              FontWeight="Bold" 
                              Foreground="#002D96"
                              Margin="10,0,0,0"/>

                    <Button Width="300" 
                       Height="50" 
                       Cursor="Hand" 
Click="ChangePassword_Click"
                       Grid.Column="0"
                            Grid.Row="2"
                        >
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                   Background="#002D96"
                                   CornerRadius="8"
                                   SnapsToDevicePixels="True">
                                    <StackPanel Orientation="Horizontal" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center">
                                        <TextBlock Text="Change Password" 
                                              Foreground="White" 
                                              FontWeight="Bold" 
                                              VerticalAlignment="Center"
                                              FontSize="22"/>
                                    </StackPanel>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" 
                                        Value="True">
                                        <Setter TargetName="border" 
                                           Property="Background" 
                                           Value="#0039D6"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" 
                                        Value="True">
                                        <Setter TargetName="border" 
                                           Property="Background"
                                           Value="#001F70"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>


                    <Button Width="300" 
                       Height="50" 
                       Cursor="Hand" 
Click="ChangeUsername_Click"
                       Grid.Column="0"
                            Grid.Row="1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                   Background="#002D96"
                                   CornerRadius="8"
                                   SnapsToDevicePixels="True">
                                    <StackPanel Orientation="Horizontal" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center">
                                        <TextBlock Text="Change Username" 
                                              Foreground="White" 
                                              FontWeight="Bold" 
                                              VerticalAlignment="Center"
                                              FontSize="22"/>
                                    </StackPanel>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" 
                                        Value="True">
                                        <Setter TargetName="border" 
                                           Property="Background" 
                                           Value="#0039D6"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" 
                                        Value="True">
                                        <Setter TargetName="border" 
                                           Property="Background"
                                           Value="#001F70"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

          


              

                </Grid>


            </Grid>



        </Border>



        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">

                <StackPanel Grid.Column="1"
                                Grid.Row="3"
           HorizontalAlignment="Right"
           VerticalAlignment="Center"
           Orientation="Horizontal">
                    <Button Width="120" 
           Height="40" 
           Cursor="Hand" 
            Click="CancelButton_Click"
          
           >
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                       Background="#002D96"
                       CornerRadius="8"
                       SnapsToDevicePixels="True">
                                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                                        <fa:ImageAwesome Icon="Times" 
                                        Foreground="White"
                                        Width="16" 
                                        Height="16" 
                                        Margin="0,0,6,0"/>
                                        <TextBlock Text="Cancel" 
                                  Foreground="White" 
                                  VerticalAlignment="Center"
                                  FontSize="15"/>
                                    </StackPanel>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" 
                            Value="True">
                                        <Setter TargetName="border" 
                               Property="Background" 
                               Value="#0039D6"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" 
                            Value="True">
                                        <Setter TargetName="border" 
                               Property="Background"
                               Value="#001F70"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                
                </StackPanel>


            </Grid>

          


            <Grid Grid.Column="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                           Orientation="Vertical"
                           VerticalAlignment="Center">

                    <TextBlock Text="Admin" 
                              FontSize="30" 
                              FontWeight="Bold" 
                              Foreground="#002D96"/>

                </StackPanel>

            </Grid>


        </Grid>


    </Grid>
</UserControl>
