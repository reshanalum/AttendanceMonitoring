<UserControl x:Class="AttendanceMonitoringSystem.View.DashboardUserControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AttendanceMonitoringSystem"
             xmlns:vm="clr-namespace:AttendanceMonitoringSystem.ViewModel"
             xmlns:View="clr-namespace:AttendanceMonitoringSystem.View"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:c="clr-namespace:AttendanceMonitoringSystem.Command"
             xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:input="clr-namespace:System.Windows.Controls;assembly=DotNetProjects.Input.Toolkit"

             mc:Ignorable="d" 
             d:DesignHeight="939" 
             d:DesignWidth="1105"
             Background="#F4F4F4">

    <UserControl.Resources>

        <c:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style x:Key="PageButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E9ECEF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DEE2E6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#AAA"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="ActivePageButtonStyle" BasedOn="{StaticResource PageButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#002D96"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#002D96"/>
        </Style>
    </UserControl.Resources>

    <Grid >

        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Image Source="/Images/BannerDashBoard.png"
                   Stretch="Fill"
                   Margin="0"/>

        </Grid>

        <Grid></Grid>

        <TextBlock Text="WELCOME!" 
                     FontSize="35" 
                     FontWeight="Bold" 
                     Foreground="#F4F4F4"
                    
                    Grid.Row="1"
                    Padding="45,5,0,0"
                     Background="#002D96"/>

        <Grid Grid.Row="2">

            <TextBlock 
                    Text="Welcome to Attendance Monitoring System by third year students in computer engineering from Ateneo de Davao University"
                    HorizontalAlignment="Left"   
                    VerticalAlignment="Center"     
                    Margin="50,0,0,0"
                    TextWrapping="Wrap"            
                    FontSize="18"                  
                    FontWeight="SemiBold"
                    Foreground="#505050" 
               
    />

        </Grid>


        <Grid Grid.Row="3" Margin="50, 0, 50, 50">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.ColumnSpan="2"
                    Grid.RowSpan="2"
            Background="White"
            CornerRadius="20"
            Margin="0,15,0,0">

                <Border.Effect>
                    <DropShadowEffect Color="#000000"
                              Opacity="0.35"
                              BlurRadius="15"
                              ShadowDepth="3"/>
                </Border.Effect>
            </Border>

            <TextBlock Text="Population Chart" 
                       Grid.Row="0"
                       Grid.Column="0"
                       FontSize="30" 
                       FontWeight="Bold" 
                       Foreground="#002D96"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Attendance Chart" 
                       Grid.Row="0"
                       Grid.Column="1"
                       FontSize="30" 
                       FontWeight="Bold" 
                       Foreground="#002D96"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Center"/>


            <!-- pie chart -->
            <lvc:PieChart Grid.Column="0"
                          Grid.Row="1"
                  Margin="20"
                  LegendLocation="Top"
                  HoverPushOut="8"
                  Series="{Binding PopulationSeries}">
            </lvc:PieChart>

            <!-- line chart -->
            <lvc:CartesianChart Grid.Column="1"
                                Grid.Row="1"
                        Margin="20"
                        LegendLocation="Right"
                        Series="{Binding AttendanceSeries}">

                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Date"
                      Labels="{Binding AttendanceLabels}"/>
                </lvc:CartesianChart.AxisX>

                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Students"/>
                </lvc:CartesianChart.AxisY>

            </lvc:CartesianChart>

        </Grid>



    </Grid>
</UserControl>
