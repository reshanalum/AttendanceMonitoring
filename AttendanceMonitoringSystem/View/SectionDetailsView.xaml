<UserControl x:Class="AttendanceMonitoringSystem.View.SectionDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AttendanceMonitoringSystem.View"
             xmlns:ViewModel="clr-namespace:AttendanceMonitoringSystem.ViewModel" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:faa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:c="clr-namespace:AttendanceMonitoringSystem.Command"
             mc:Ignorable="d" 
             d:DesignHeight="939" 
             d:DesignWidth="1105"
             Background="#F4F4F4">


    <UserControl.Resources>
        <c:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

    </UserControl.Resources>

    <Grid Margin="40">

        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="250"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="3"
              HorizontalAlignment="Left">

            <StackPanel Orientation="Horizontal">
                <Border Width="250"
                    Height="180"
                    Background="White"
                    CornerRadius="8"
                    Padding="0"
                    Margin="20,0,20,0"
                    SnapsToDevicePixels="True">

                    <Border.Effect>
                        <DropShadowEffect Color="#002D96" 
                          Opacity="0.2" 
                          BlurRadius="8" 
                          Direction="270"/>
                    </Border.Effect>

                    <Button Background="Transparent"  
                         Cursor="Hand"
                         Command="{Binding ShowStudentListCommand}">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </ControlTemplate>
                        </Button.Template>

                        <StackPanel Orientation="Vertical" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center">

                            <fa:ImageAwesome Icon="Group"
                             Width="150" Height="130"
                             Foreground="#002D96"
                             HorizontalAlignment="Center"/>

                            <TextBlock Text="Student List" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#002D96"
                               HorizontalAlignment="Center"/>

                        </StackPanel>
                    </Button>

                </Border>

                <Border Width="250"
                        Height="180"
                        Background="White"
                        CornerRadius="10"
                        Padding="0"
                        Margin="20,0,20,0"
                        SnapsToDevicePixels="True">

                    <Border.Effect>
                        <DropShadowEffect Color="#002D96" 
                          Opacity="0.2" 
                          BlurRadius="8" 
                          Direction="270"/>
                    </Border.Effect>


                    <Button Cursor="Hand"
                            Background="Transparent"
                            Command="{Binding ShowAttendanceHistoryCommand}">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </ControlTemplate>
                        </Button.Template>

                        <StackPanel Orientation="Vertical" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">

                            <fa:ImageAwesome Icon="History"
                             Width="150" Height="130"
                             Foreground="#002D96"
                             HorizontalAlignment="Center"/>

                            <TextBlock Text="Attendance History" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#002D96"
                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>



            </StackPanel>


        </Grid>


        <Grid Grid.Row="0">
            <Button x:Name="BtnBack"
                     BorderThickness="0"
                     FontFamily="Montserrat"
                     FontSize="15"
                     FontWeight="Bold"
                     Cursor="Hand"
                     Click="ButtonBack_Click"
                    HorizontalAlignment="Left"
                    Margin="20,0,0,0">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3060FF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Width="30" Height="30"
                 Background="{TemplateBinding Background}" Margin="0,-2,3,-2">
                            <ContentPresenter VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <faa:IconImage Icon="ArrowLeft"
                               Height="25"
                               Width="32"
                               Foreground="#FF002D96">
                    <faa:IconImage.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </faa:IconImage.RenderTransform>
                </faa:IconImage>
            </Button>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">


            </Grid>
            <Grid Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,226,0" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Vertical">
                    <TextBlock Text="{Binding SelectedSection.SectionName}" 
                               FontSize="40" 
                               FontWeight="Bold" 
                               Foreground="#002D96"/>

                    <TextBlock Text="{Binding SelectedSection.AdviserName, StringFormat=Class Adviser: {0}}" 
                               FontSize="18" 
                               Foreground="Gray"
                               FontWeight="Bold" 
                               Margin="0,0,0,10"
                               VerticalAlignment="Bottom"/>

                </StackPanel>



            </Grid>


        </Grid>


    </Grid>

</UserControl>
