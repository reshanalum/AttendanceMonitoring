<UserControl x:Class="AttendanceMonitoringSystem.View.SectionDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AttendanceMonitoringSystem.View"
             xmlns:ViewModel="clr-namespace:AttendanceMonitoringSystem.ViewModel" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:c="clr-namespace:AttendanceMonitoringSystem.Command"
             mc:Ignorable="d" 
             d:DesignHeight="939" 
             d:DesignWidth="1105"
             Background="#F4F4F4">

    <UserControl.Resources>
        <c:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

    </UserControl.Resources>

    <Grid Margin="50">

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="250"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="2"
              HorizontalAlignment="Left">

            <StackPanel Orientation="Horizontal">
                <Border Width="250"
                    Height="180"
                    Background="White"
                    CornerRadius="8"
                    Padding="0"
                    Margin="20,0,20,0"
                    SnapsToDevicePixels="True">

                    <Border.Effect>
                        <DropShadowEffect Color="#002D96" 
                          Opacity="0.2" 
                          BlurRadius="8" 
                          Direction="270"/>
                    </Border.Effect>

                    <Button Background="Transparent"  
                         Cursor="Hand"
                        Click="StudentButton_Click">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </ControlTemplate>
                        </Button.Template>

                        <StackPanel Orientation="Vertical" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center">

                            <fa:ImageAwesome Icon="Group"
                             Width="150" Height="130"
                             Foreground="#002D96"
                             HorizontalAlignment="Center"/>

                            <TextBlock Text="Student List" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#002D96"
                               HorizontalAlignment="Center"/>

                        </StackPanel>
                    </Button>

                </Border>

                <Border Width="250"
        Height="180"
        Background="White"
        CornerRadius="10"
        Padding="0"
        Margin="20,0,20,0"
        SnapsToDevicePixels="True">

                    <Border.Effect>
                        <DropShadowEffect Color="#002D96" 
                          Opacity="0.2" 
                          BlurRadius="8" 
                          Direction="270"/>
                    </Border.Effect>


                    <Button Cursor="Hand"
                            Click="AttendanceHistoryButton_Click" 
                            Background="Transparent">
                        
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </ControlTemplate>
                        </Button.Template>

                        <StackPanel Orientation="Vertical" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">

                            <fa:ImageAwesome Icon="History"
                             Width="150" Height="130"
                             Foreground="#002D96"
                             HorizontalAlignment="Center"/>

                            <TextBlock Text="Attendance History" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#002D96"
                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>



            </StackPanel>


        </Grid>
        



        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">

                
            </Grid>
            <Grid Grid.Column="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Vertical">
                    <TextBlock Text="Section List" 
                               FontSize="40" 
                               FontWeight="Bold" 
                               Foreground="#002D96"/>

                    <TextBlock Text="Grade 6 - St. Peter" 
                               FontSize="18" 
                               Foreground="Gray"
                               FontWeight="Bold" 
                               Margin="0,0,0,10"
                               VerticalAlignment="Bottom"/>

                </StackPanel>



            </Grid>


        </Grid>


    </Grid>

</UserControl>
