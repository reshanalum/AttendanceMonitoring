<Window x:Class="TEVES_FP_WPF_PCSHOP.View.PCLoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEVES_FP_WPF_PCSHOP.View"
        
        mc:Ignorable="d"
        Title="PCLoginView" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="30"
        BorderThickness="2.5">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F7418F" Offset="0"/>
                <GradientStop Color="#FC819E" Offset="0.50"/>
                <GradientStop Color="#FEC7B4" Offset="0.75"/>
                <GradientStop Color="#FFF3C7" Offset="0.90"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <ImageBrush ImageSource="/Images/WPFBG.png"/>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="LOG IN"
                           Foreground="#FFF9EF"
                           FontSize="15"
                           FontFamily="Montserrat"
                           FontWeight="Bold"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="25,0,0,0"/>

                <Button x:Name="btnMinimize"
                        BorderThickness="0"
                        Content="_"
                        Foreground="#FFF3C7"
                        FontFamily="Montserrat"
                        FontWeight="ExtraBold"
                        FontSize="15"
                        Cursor="Hand"
                        Click="ButtonMinimize_Click" Grid.ColumnSpan="2" Margin="719,0,5,0">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FC819E"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FEC7B4"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="25" Height="25"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnClose"
                        BorderThickness="0"
                        Content="X"
                        Foreground="#FFF3C7"
                        FontFamily="Montserrat"
                        FontSize="15"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="ButtonClose_Click">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#F7418F"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FEC7B4"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="25" Height="25"
                CornerRadius="15"
                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <StackPanel Width="250"
                        Grid.Row="2"
                        Orientation="Vertical"
                        Margin="0,50,0,0">

                <Image Source="/Images/WPF LOGO.png"
                       Width="100" Height="98"/>

                <TextBlock Text="PinkByte PC Works"
                           Foreground="#F7418F"
                           FontSize="20"
                           FontFamily="Montserrat"
                           FontWeight="ExtraBold"
                           HorizontalAlignment="Center"
                           />
                <TextBlock Text="Where technology meets a touch of pink perfection. Your trusted destination for chic PC repairs and builds."
                            Foreground="#FC819E"
                            FontSize="9"
                            FontFamily="Montserrat"
                            FontWeight="Regular"
                            TextWrapping="Wrap"
                            TextAlignment="Center"
                            Margin="0,5,0,0"
                            />
                <TextBlock Text="Username"
                            Foreground="#F7418F"
                            FontSize="11"
                            FontFamily="Montserrat"
                            FontWeight="Bold"
                            Margin="0,25,0,0"
                            />
                <TextBox x:Name="TextofUser"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="13"
                         FontWeight="Regular"
                         FontFamily="Montserrat"
                         Foreground="#FC819E"
                         CaretBrush="#F7418F"
                         BorderBrush="#FFF3C7"
                         BorderThickness="0,0,0,2"
                         Height="28"
                         VerticalContentAlignment="Center"
                         Margin="0,5,0,0"
                         Padding="20,0,0,0">
                    <TextBox.Background>
                        <ImageBrush ImageSource="/Images/USR LOGO.png"
                                    Stretch="Uniform"
                                    AlignmentX="Left"/>
                    </TextBox.Background>
                </TextBox>

                <TextBlock Text="Password"
                            Foreground="#F7418F"
                            FontSize="11"
                            FontFamily="Montserrat"
                            FontWeight="Bold"
                            Margin="0,15,0,0"
                            />
                <TextBox x:Name="PassofUser"
                         Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="13"
                         FontWeight="Regular"
                         FontFamily="Montserrat"
                         Foreground="#FC819E"
                         CaretBrush="#F7418F"
                         BorderBrush="#FFF3C7"
                         BorderThickness="0,0,0,2"
                         Height="28"
                         VerticalContentAlignment="Center"
                         Margin="0,5,0,0"
                         Padding="20,0,0,0">
                    <TextBox.Background>
                        <ImageBrush ImageSource="/Images/PSS LOGO.png"
                                    Stretch="Uniform"
                                    AlignmentX="Left"/>
                    </TextBox.Background>
                </TextBox>

                <Button x:Name="btnLogin"
                        BorderThickness="0"
                        Content="Log In"
                        Foreground="#FFF3C7"
                        FontFamily="Montserrat"
                        FontSize="15"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Grid.Column="2"
                        Margin="0,25,0,0"
                        Command="{Binding LoginCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#F7418F"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FEC7B4"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="100" Height="30"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                                                    <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>

        </Grid>

    </Border>

</Window>
